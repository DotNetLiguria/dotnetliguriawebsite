<!--=== Slider ===-->
@*@Html.Partial("_SlidersControl")*@

<!--=== Slider ===-->
<div class="slider-inner">
    <div id="da-slider" class="da-slider">
        @foreach (var item in Model.Sliders.Where(x => x.Enable).ToList())
        {
            <div class="da-slide">
                <div class="da-img"><a href="@item.Title" target="_blank"><img class="fimg-responsive full-width" src="@item.Image" alt=""></a></div>
            </div>
        }
    </div>
</div><!--/slider-->
<!--=== End Slider ===-->
<!--=== End Slider ===-->
<!--=== Purchase Block ===-->
<div class="purchase">
    <div class="container">
        <div class="row">
            <div class="col-md-6 animated fadeInLeft">
                @*@MvcHtmlString.Create(ViewBag.LeftShoulder)*@
                @Html.Action("Snippet", "Home", new { section = DotNetLiguria.Models.SectionName.LeftShoulder })
            </div>
            <div class="col-md-6 animated fadeInRight">
                @*@MvcHtmlString.Create(ViewBag.RightShoulder)*@
                @Html.Action("Snippet", "Home", new { section = DotNetLiguria.Models.SectionName.RightShoulder })
