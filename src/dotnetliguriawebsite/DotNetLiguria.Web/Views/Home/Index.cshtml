    <script type="text/javascript">

    jQuery(document).ready(function () {
        App.init();
        LayerSlider.initLayerSlider();
    });

    $(document).ready(function (e) {

        $(".partialContents").each(function (index, item) {
            var url = "@Url.Content("~/").TrimEnd('/')" + $(item).data("url");
            if (url && url.length > 0) {
                $(item).load(url);
            }
        });
    });

    </script>
