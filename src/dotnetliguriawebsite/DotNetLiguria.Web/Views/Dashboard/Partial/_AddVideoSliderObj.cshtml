@model DotNetLiguria.Models.VideoSliderObj


<form method="post" action="/Dashboard/AddVideoSliderObj" enctype="multipart/form-data">

    @Html.HiddenFor(model => model.SliderObjBaseId)

    <div class="modal-body">

        <div class="tab-v2">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#generalVideoTab" data-toggle="tab"><i class="fa fa-home"></i> General</a></li>
                <li><a href="#videoTab" data-toggle="tab"><i class="fa fa-file-image-o"></i> Video</a></li>
                <li><a href="#transitionsVideoTab" data-toggle="tab"><i class="fa fa-sliders"></i> Transitions</a></li>
            </ul>

            <div class="tab-content">
                <br />
                <div class="tab-pane fade in active" id="generalVideoTab">
                    @Html.Partial("Partial/_GeneralLayer")
                </div>
                <div class="tab-pane fade in" id="videoTab">
                    <div class="form-group">
                        <label for="VideoType">Video Type</label>
                        <br />
                        @Html.EnumDropDownListFor(model => model.SlideVideoType)
                    </div>
                    <div class="form-group">
                        <label for="Source">Source</label>
                        <input type="text" id="Source" name="Source" class="form-control" placeholder="YouTube Id, Vimeo Id, Url video" required>
                    </div>
                </div>
                <div class="tab-pane fade in" id="transitionsVideoTab">
                    @Html.Partial("Partial/_TransitionsLayer")
                </div>
            </div>

        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Submit</button>
        <button data-dismiss="modal" class="btn btn-u btn-u-default" type="button">Close</button>
    </div>
</form>





