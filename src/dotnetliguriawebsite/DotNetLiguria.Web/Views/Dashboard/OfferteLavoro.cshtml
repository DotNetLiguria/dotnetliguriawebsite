@model IEnumerable<DotNetLiguria.Models.OffertaLavoro>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--=== Content ===-->

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-rss fa-fw"></i> Offerte Lavoro
        <div class="pull-right">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                    Actions
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>
                        <a href="@Url.Action("CreateOffertaLavoro", "Dashboard")"><i class="fa fa-plus"></i> Crea nuovo Annuncio</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
     
    <br />
    <hr />

    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <!--Striped Rows-->
            <div class="col-md-12">
                <div class="panel panel-sea margin-bottom-40">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Azienda</th>
                                <th>Luogo</th>
                                <th>CreationDate</th>
                                <th>Link</th>
                                <th>User</th>
                                <th>Enable</th>
                                <th>Edit</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var offerte in Model)
                            {
                                <tr>
                                    <td><img src="@offerte.Logo" height="50" width="50" /></td>
                                    <td>@offerte.Title</td>
                                    <td>@offerte.Description</td>
                                    <td>@offerte.Azienda</td>
                                    <td>@offerte.Luogo</td>
                                    <td>@offerte.CreationDate</td>
                                    <td><a href="@offerte.Link">Link</a></td>
                                    <td>@offerte.User.Email</td>
                                    <td>
                                        @if (@offerte.Enable)
                                        {
                                            <button class="btn btn-warning btn-xs" onclick="javascript:window.location=('@Url.Action("EnableOfferteLavoro", "Dashboard", new { offerte.OffertaLavoroId })')">
                                                <i class="fa fa-check-circle-o"></i> Disable
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-success btn-xs" onclick="javascript:window.location=('@Url.Action("EnableOfferteLavoro", "Dashboard", new { offerte.OffertaLavoroId })')">
                                                <i class="fa fa-check-circle-o"></i> Enable
                                            </button>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-warning btn-xs" onclick="javascript:window.location=('@Url.Action("EditOffertaLavoro", "Dashboard", new { offerte.OffertaLavoroId })')">
                                            <i class="fa fa-edit"></i> Edit
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-xs" onclick="javascript:window.location=('@Url.Action("DeleteOfferteLavoro", "Dashboard", new { offerte.OffertaLavoroId })')">
                                            <i class="fa fa-trash-o"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!--End Striped Rows-->
        </div>
        <!--End Striped and Hover Rows-->
    </div>
    <!-- /.panel-body -->
</div>

<!--=== END Content ===-->

