@model DotNetLiguria.Models.VideoSliderObj

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Video Slider Obj</h2>

<script src="//cdn.ckeditor.com/4.4.7/full/ckeditor.js"></script>

<form method="post" action="/Dashboard/EditVideoSliderObj" enctype="multipart/form-data">

    @Html.HiddenFor(model => model.SliderObjBaseId)
    @Html.HiddenFor(model => model.SliderId)

    <div class="modal-body">

        <div class="tab-v2">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#General" data-toggle="tab"><i class="fa fa-home"></i> General</a></li>
                <li><a href="#video" data-toggle="tab"><i class="fa fa-file-image-o"></i> Video</a></li>
                <li><a href="#transitions" data-toggle="tab"><i class="fa fa-sliders"></i> Transitions</a></li>
            </ul>

            <div class="tab-content">
                <br />
                <div class="tab-pane fade in active" id="General">
                    @Html.Partial("Partial/_GeneralLayer")
                </div>
                <div class="tab-pane fade in" id="video">
                    <div class="form-group">
                        <label for="VideoType">Video Type</label>
                        <br />
                        @Html.EnumDropDownListFor(model => model.SlideVideoType)
                    </div>
                    <div class="form-group">
                        <label for="Source">Source</label>
                        <input type="text" id="Source" name="Source" class="form-control" value="@Model.Source" placeholder="YouTube Id, Vimeo Id, Url video" required>
                    </div>
                </div>
                <div class="tab-pane fade in" id="transitions">
                    @Html.Partial("Partial/_TransitionsLayer")
                </div>
            </div>

        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Submit</button>
        <button data-dismiss="modal" class="btn btn-u btn-u-default" type="button">Close</button>
    </div>
</form>
