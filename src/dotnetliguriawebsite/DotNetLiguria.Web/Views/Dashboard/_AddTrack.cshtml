@model DotNetLiguria.Models.WorkshopTrack


<link href="~/Content/plugins/select2/4.0.0-rc.2/css/select2.min.css" rel="stylesheet" />
<script src="~/Content/plugins/select2/4.0.0-rc.2/js/select2.min.js"></script>

<!-- Input Groups -->
<div class="panel-body">
    <form method="post" action="/Dashboard/AddTrack">

        @Html.HiddenFor(x => x.WorkshopId)

        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" id="Title" name="Title" class="form-control">
        </div>

        <div class="form-group">
            <label for="StartTime"> StartTime </label>
            <input type="time" id="StartTime" name="StartTime" class="form-control">
        </div>

        <div class="form-group">
            <label for="EndTime"> EndTime</label>
            <input type="time" id="EndTime" name="EndTime" class="form-control">
        </div>

        @*<div class="form-group">
            <label for="Image"> Image</label>
            <input type="text" id="Image" name="Image" class="form-control">
        </div>*@

        <div class="form-group">
            <label for="Level"> Level</label>
            <input type="number" id="Level" name="Level" class="form-control">
        </div>

        <div class="form-group">
            <label for="Abstract">Abstract</label>
            <textarea type="text" id="Abstract" name="Abstract" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group">
            <h5 class="panel-title"><i class="icon-users"></i><label for="Speakers"> Speakers</label></h5>
            @Html.ListBox("Speakers", @DotNetLiguria.Web.Helpers.SpeakersHelper.GetSpeakers, new { @class = "form-control", @style = "width:100%;" })
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>

        @*<button class="btn btn-success" onclick="javascript:window.location=('@Url.Action("AddTrack", "Dashboard")')">
                <i class="fa fa-trash-o"></i> Add
            </button>*@

    </form>
</div>

<!-- End Input Groups -->



<script type="text/javascript">
    $(document).ready(function () {
        $("#Speakers").select2(
            {
                placeholder: "Select speakers",
                maximumSelectionSize: 10,
                width: 400
            })
    });
</script>

