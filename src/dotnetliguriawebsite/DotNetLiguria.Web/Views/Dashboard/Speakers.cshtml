@model IEnumerable<DotNetLiguria.Models.WorkshopSpeaker>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- /.panel -->
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-reddit fa-fw"></i> Speakers
        <div class="pull-right">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                    Actions
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>
                        <a href="#" data-toggle="modal" data-target="#myModal">Add Speaker</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Traks</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var speaker in Model)
                            {
                                <tr>
                                    <td><img src="@speaker.ProfileImage" height="80" /></td>
                                    <td>@speaker.Name</td>
                                    @if (speaker.Tracks != null)
                                    {
                                        <td>@speaker.Tracks.Count()</td>
                                    }
                                    else
                                    {
                                        <td>0</td>
                                    }
                                    <td>
                                        <a class="btn btn-danger btn-xs" onclick="javascript:window.location=('@Url.Action("EditSpeaker", "Dashboard", new { speaker.WorkshopSpeakerId })')">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-xs" onclick="javascript:window.location=('@Url.Action("DeleteSpeaker", "Dashboard", new { speaker.WorkshopSpeakerId })')">
                                            <i class="fa fa-trash-o"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-4 (nested) -->
            <div class="col-lg-8">
                <div id="morris-bar-chart"></div>
            </div>
            <!-- /.col-lg-8 (nested) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 id="myModalLabel1" class="modal-title">Add Speaker</h4>
            </div>

            <div class="modal-body">
                @Html.Partial("_AddSpeaker", new DotNetLiguria.Models.WorkshopSpeaker())
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-u btn-u-default" type="button">Close</button>
            </div>
        </div>
    </div>
</div>