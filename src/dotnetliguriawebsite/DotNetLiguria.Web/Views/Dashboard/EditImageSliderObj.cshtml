@model DotNetLiguria.Models.ImageSliderObj

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Image Slider Obj</h2>

<script src="//cdn.ckeditor.com/4.4.7/full/ckeditor.js"></script>

<form method="post" action="/Dashboard/EditImageSliderObj" enctype="multipart/form-data">

    @Html.HiddenFor(model => model.SliderObjBaseId)
    @Html.HiddenFor(model => model.SliderId)

    <div class="modal-body">

        <div class="tab-v2">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#General" data-toggle="tab"><i class="fa fa-home"></i> General</a></li>
                <li><a href="#image" data-toggle="tab"><i class="fa fa-file-image-o"></i> Image</a></li>
                <li><a href="#transitions" data-toggle="tab"><i class="fa fa-sliders"></i> Transitions</a></li>
            </ul>

            <div class="tab-content">
                <br />
                <div class="tab-pane fade in active" id="General">
                    @Html.Partial("Partial/_GeneralLayer")
                </div>
                <div class="tab-pane fade in" id="image">
                    <div class="row">
                        <div class="col col-lg-1">
                            <div class="form-group">
                                <img id="fotoPrev" src="@Model.Image" width="90" height="120" />
                            </div>
                        </div>
                        <div class="col col-lg-4">
                            <input type="text" id="Image" name="Image" class="form-control" value="@Model.Image">
                            <br />
                            <span class="btn btn-default btn-file margin-10">
                                <input type="file" id="file" name="file">
                            </span>
                            <br />
                            <label>Immagine dimensione massima (800 KByte)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Link">Link</label>
                        <input type="text" id="Link" name="Link" class="form-control" placeholder="Url" value="@Model.Link">
                    </div>
                </div>
                <div class="tab-pane fade in" id="transitions">
                    @Html.Partial("Partial/_TransitionsLayer")
                </div>
            </div>

        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Submit</button>
        <button data-dismiss="modal" class="btn btn-u btn-u-default" type="button">Close</button>
    </div>

    <script type="text/javascript">
        CKEDITOR.replace('editor1', {
            filebrowserImageBrowseUrl: '/Dashboard/uploadPartial',
            filebrowserImageUploadUrl: '/Dashboard/uploadnow'
        });

        function updateValue(id, value) {
            // this gets called from the popup window and updates the field with a new value
            var jqueryObjectByClass = $(".cke_dialog_ui_input_text")[1];
            jqueryObjectByClass.value = value;
        }
    </script>
</form>

<script type="text/javascript">
    function readURL(input) {

        if (input.files && input.files[0]) {

            var fsize = $('#file')[0].files[0].size;

            if (fsize > 800000) {
                alert("Immagine troppo grande : " + fsize + " Bytes");
                $('#file').val("");
            }
            else {

                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#fotoPrev').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    }

    $(document).ready(function () {

        $("#file").change(function () {
            readURL(this);
        });

    });

</script>
